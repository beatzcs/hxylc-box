/* pages/mine/mine.wxss */

.container {
  color: #353535;
  box-sizing: border-box;
  position: relative;
}

.userinfo {
  height: 400rpx;
  border-bottom: 1rpx solid #efefef;
}

.bg_mine {
  width: 100%;
  height: 330rpx;
  position: absolute;
  top: 0;
  z-index: -1;
}

.integral {
  font-size: 10pt;
  color: #fff;
  padding: 5rpx 20rpx;
  border-radius: 10rpx;
  text-align: center;
  border: 1rpx solid #fff;
  position: absolute;
  left: 20rpx;
  top: 15rpx;
}

.info {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 330rpx;
}

.info .headimg {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  margin-top: 40rpx;
  margin-bottom: 15rpx;
}

.info .nickname {
  color: #fff;
  font-size: 12pt;
}

.btns {
  display: flex;
  font-size: 12pt;
  height: 70rpx;
  justify-content: space-around;
  align-items: center;
  position: absolute;
  top: 310rpx;
  left: 0;
  right: 0;
}

.btns .save, .btns .subscribe {
  position: relative;
  width: 220rpx;
  height: 70rpx;
}

.btns .save image, .btns .subscribe image {
  width: 220rpx;
  height: 70rpx;
}

.btns .save button, .btns .subscribe button {
  position: absolute;
  font-size: 11pt;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  border: none;
  padding: 0;
  margin: 0;
  line-height: 70rpx;
  color: #fff;
}

.btns .save button {
  background-color: #00a2ff;
}

.btns .save .hove, .btns .subscribe .hove {
  transform: scale(0.9);
}

.btns .subscribe button {
  background-color: #ff685d;
}

/* 游戏列表 */

.nothing {
  height: 250rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #bdbdbd;
  font-size: 10pt;
}

.gamelist {
  /* border-top: 20rpx solid #f5f5f5; */
  border-bottom: 1rpx solid #efefef;
}

.gamelist .gametitle {
  font-size: 12pt;
  padding: 20rpx;
  color: #7a7e83;
  border-bottom: 1rpx solid #efefef;
}

.gamelist .list {
  display: flex;
  padding: 15rpx;
  overflow-x: scroll;
}

.gamelist .list .item {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 10pt;
  padding: 10rpx 0rpx;
  margin-right: 15rpx;
  color: #313538;
}

.gamelist .list .item image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
}
