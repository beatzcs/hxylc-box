/* pages/welfare/tasklist/tasklist.wxss */

.task-item {
  display: flex;
  padding: 15rpx 20rpx;
  align-items: center;
  border-bottom: 1rpx solid #efefef;
}

.task-item image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
}

.task-item .task-desc {
  height: 120rpx;
  padding: 5rpx 15rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  color: #313538;
  font-size: 11pt;
}

.task-item .task-desc .gain {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 10pt;
  color: #bdbdbd;
}

.task-item .task-btn {
  height: 60rpx;
  line-height: 60rpx;
  background-color: #ff685d;
  color: #fff;
  border-radius: 7rpx;
  font-size: 11pt;
  padding: 0 35rpx;
  text-align: center;
}

.task-item .task-btn::after {
  border: none;
}
